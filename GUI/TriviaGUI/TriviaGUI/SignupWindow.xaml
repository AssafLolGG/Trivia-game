<Window x:Class="TriviaGUI.SignupScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaGUI"
        mc:Ignorable="d"
      Title="Signup screen" Height="1000" Width="800"
        Background="BurlyWood">
    <ScrollViewer>
    <Grid RenderTransformOrigin="0.574,0.323">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190"></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
        </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="1">
                <Label HorizontalAlignment="Center" Content="UserName:" Height="40" FontSize="20"/>
                <TextBox x:Name="username_control" Height="40"/>
                <Label HorizontalAlignment="Center" Content="Password:" Height="40" FontSize="20"/>
                <PasswordBox x:Name="password_control" Height="40"/>
                <Label HorizontalAlignment="Center" Content="Email:" Height="40" FontSize="20"/>
                <TextBox x:Name="email_control" Height="40"/>
                <Label HorizontalAlignment="Center" Content="City:" Height="40" FontSize="20"/>
                <TextBox x:Name="city_control" Height="40"/>
                <Label HorizontalAlignment="Center" Content="Street:" Height="40" FontSize="20"/>
                <TextBox x:Name="street_control" Height="40"/>
                <Label HorizontalAlignment="Center" Content="Apartment number:" Height="40" FontSize="20"/>
                <TextBox x:Name="apt_control" Height="40"/>
                <Label HorizontalAlignment="Center" Content="Phone number:" Height="40" FontSize="20"/>
                <TextBox x:Name="phone_number_control" Height="40"/>
                <Label HorizontalAlignment="Center" Content="BirthDate:" Height="40" FontSize="20"/>
                <DatePicker Name="birthdateControl" Height="40"></DatePicker>
                <Border BorderBrush="Black" Height="30"/>
                <Button x:Name="signup_button" Height="50" Width="90" Content="Signup" Click="Button_Click"/>
                <Border BorderBrush="Black" Height="30"/>
                <Button x:Name="login_button" Height="50" Width="90" Content="Login" Margin="156,0,155,0" RenderTransformOrigin="1.022,0.694" Click="back_to_login_Button_Click"/>
                <Border BorderBrush="Black" Height="30"/>
                <Label Name="infoBox" Content=""  Height="60" FontSize="15"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>

</Window>
