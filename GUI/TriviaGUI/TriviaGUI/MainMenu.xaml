<Window x:Class="TriviaGUI.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaGUI"
        mc:Ignorable="d"
        Title="MainMenu" Height="1000" Width="800" Background="#00b3b3">
    <Grid>
        <StackPanel>
            <Border Height="100"></Border>
            <Button x:Name="room_menu_button" HorizontalAlignment="Center" Height="100" Width="300" FontSize="30" Click="room_menu_button_Click">Room Menu</Button>
            <Border Height="100"></Border>
            <Button Name="statistics_buttons" HorizontalAlignment="Center" Height="100" Width="300" FontSize="30" Click="statistics_buttons_Click">Personal Statistics</Button>
            <Border Height="100"></Border>
            <Button x:Name="log_out_button" HorizontalAlignment="Center" Height="100" Width="300" FontSize="30" Click="log_out_button_Click">Log Out</Button>
        </StackPanel>
    </Grid>
</Window>
